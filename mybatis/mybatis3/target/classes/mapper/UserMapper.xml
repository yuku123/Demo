<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zifang.demo.mybaits3.dao.UserDao">
    
    <resultMap id="BaseResultMap" type="com.zifang.demo.mybaits3.dto.UserDTO">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="creator" jdbcType="VARCHAR" property="creator" />
        <result column="gmt_created" jdbcType="TIMESTAMP" property="gmtCreated" />
        <result column="modifier" jdbcType="VARCHAR" property="modifier" />
        <result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified" />
        <result column="is_deleted" jdbcType="CHAR" property="isDeleted" />
        <result column="user_name" jdbcType="VARCHAR" property="userName" />
        <result column="user_no" jdbcType="VARCHAR" property="userNo" />
        <result column="user_type" jdbcType="TINYINT" property="userType" />
        <result column="status" jdbcType="TINYINT" property="status" />
    </resultMap>

    <sql id="baseSQL">
        user_name,user_no,user_type,status
    </sql>
    
    <select id="selectAll" resultMap="BaseResultMap">
        select * from user;
    </select>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select * from user where id = #{id};
    </select>

    <select id="selectByParam" resultMap="BaseResultMap" parameterType="java.util.Map">
        select * from user
        <where>
            <if test="userName!=null">
                user_name = #{userName}
            </if>
            <if test="userNo!=null">
                user_no = #{userNo}
            </if>
            <if test="userType!=null">
                user_type = #{userType}
            </if>
            <if test="status!=null">
                status = #{status}
            </if>
            <if test="isDeleted!=null">
                is_delete = #{isDeleted}
            </if>
        </where>
    </select>

    <select id="selectIn" parameterType="java.util.List" resultMap="BaseResultMap">
        select * from user where user_no in
        <foreach collection="list" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </select>

    <select id="selectByUserNameOrUserNo" parameterType="java.lang.String" resultMap="BaseResultMap">
        select * from user
        <where>
            <choose>
                <when test="param1 != null">
                    user_name = #{param1}
                </when>
                <otherwise>
                    user_no = #{param2}
                </otherwise>
            </choose>
        </where>
    </select>

    <insert id="insertOne" parameterType="com.zifang.demo.mybaits3.dto.UserDTO">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userName != null">
                user_name,
            </if>
            <if test="userNo != null">
                user_no,
            </if>
            <if test="userType != null">
                user_type,
            </if>
            <if test="status != null">
                status,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userName != null">
                #{userName,jdbcType=VARCHAR},
            </if>
            <if test="userNo != null">
                #{userNo,jdbcType=VARCHAR},
            </if>
            <if test="userType != null">
                #{userType,jdbcType=TINYINT},
            </if>
            <if test="status != null">
                #{status,jdbcType=TINYINT},
            </if>
        </trim>
    </insert>
    
    <insert id="batchInsert" parameterType="java.util.List">
        insert into user (
        <include refid="baseSQL" />
        ) values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.userName},
            #{item.userNo},
            #{item.userType,jdbcType=TINYINT},
            #{item.status,jdbcType=TINYINT}
            )
        </foreach>
    </insert>

    <update id="updateById">
        update user
        <set>
            <if test="record.userName != null">
                user_name = #{record.userName},
            </if>
            <if test="record.userNo != null">
                user_no = #{record.userNo},
            </if>
            <if test="record.status != null">
                status = #{record.status},
            </if>
            <if test="record.userType != null">
                user_type = #{record.userType},
            </if>
            <if test="record.isDeleted != null">
                is_deleted = #{record.isDeleted},
            </if>
            gmt_modified = now(),
            modifier = ifnull(#{record.modifier}, 'system')
        </set>
        where id = #{id}
    </update>

</mapper>